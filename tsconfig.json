{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "noEmit": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "lib": ["ES2022"],
        "types": ["bun-types"],
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "spec/**/*"],
    "exclude": ["node_modules", "_archived"]
}
